<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design1"
    tools:context=".Activity.MiniGamesActivity">

    <TextView
        android:id="@+id/miniGameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Mini Games"
        android:layout_centerHorizontal="true"
        android:textColor="#32E0C4"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/miniGameText"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/high_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/highorlow"
                />

            <RelativeLayout
                android:id="@+id/math_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mathmaster"
                android:layout_marginTop="20dp"
                />



        </LinearLayout>

    </ScrollView>

</RelativeLayout>